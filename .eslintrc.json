{
  "plugins": ["prettier"],
  // extends order is important
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "es2020": true,
    "serviceworker": true,
    "webextensions": true
  },
  "ignorePatterns": ["**/*.html", ".github"],
  "rules": {
    "prettier/prettier": "error"
  }
}
