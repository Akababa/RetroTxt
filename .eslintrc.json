{
  "plugins": ["prettier"],
  // extends order is important
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "env": {
    "browser": true,
    "es2020": true,
    "serviceworker": true,
    "webextensions": true
  },
  "ignorePatterns": ["**/*.html", ".github"],
  "rules": {
    "prettier/prettier": "error"
  },
  "globals": {
    "BrowserEncoding": "readonly",
    //"BrowserEncodings": "readonly",
    //"BusySpinner": "readonly",
    //"Characters": "readonly",
    //"CheckArguments": "readonly",
    //"CheckRange": "readonly",
    //"Configuration": "readonly",
    "Contrast": "readonly",
    "CreateLink": "readonly",
    //"DisplayAlert": "readonly",
    //"DisplayEncodingAlert": "readonly",
    "FindControlSequences": "readonly",
    //"WebBrowser": "readonly",
    //"BrowserOS": "readonly",
    //"FontFamily": "readonly",
    //"Guess": "readonly",
    //"HardwarePalette": "readonly",
    "HumaniseCamelCase": "readonly",
    "HumaniseFS": "readonly",
    //"OptionsReset": "readonly",
    "ParseToChildren": "readonly",
    "RemoveTextPairs": "readonly",
    //"StringToBool": "readonly",
    "ToggleTextEffect": "readonly",
    "ToggleScanlines": "readonly"
  }
}
